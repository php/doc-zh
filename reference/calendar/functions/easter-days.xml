 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>easter_days</function> 示例</title>
    <programlisting role="php">
<![CDATA[
<?php

echo easter_days(1999);        // 14, i.e. April 4
echo easter_days(1492);        // 32, i.e. April 22
echo easter_days(1913);        //  2, i.e. March 23

?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

