     <term><varname>data</varname></term>
     <listitem>
      <para>待上传的内容</para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="curlstringfile.props.postname">
     <term><varname>postname</varname></term>
     <listitem>
      <para>上传数据中的文件名称</para>
     </listitem>
