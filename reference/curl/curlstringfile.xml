    <varlistentry xml:id="curlstringfile.props.mime">
     <term><varname>mime</varname></term>
     <listitem>
      <para>文件的 MIME 类型（默认为 <literal>application/octet-stream</literal>）。</para>
     </listitem>
    </varlistentry>
   </variablelist>
