<refentry xml:id="function.get-include-path" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>get_include_path</refname>
  <refpurpose>获取当前的 include_path 配置选项</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>get_include_path</methodname>
   <void />
  </methodsynopsis>
  <simpara>
   获取当前 <link linkend="ini.include-path">include_path</link>
   配置选项的值。
  </simpara>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   返回字符串的路径。
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>get_include_path</function> 例子</title>
    <programlisting role="php">
<![CDATA[
<?php
echo get_include_path();

// 或使用 ini_get()
echo ini_get('include_path');
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>ini_get</function></member>
    <member><function>restore_include_path</function></member>
    <member><function>set_include_path</function></member>
    <member><function>include</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

