      <entry>PHP_INI_ALL</entry>
      <entry></entry>
     </row>
     <row>
      <entry><link linkend="ini.default-socket-timeout">default_socket_timeout</link></entry>
      <entry>"60"</entry>
      <entry>PHP_INI_ALL</entry>
      <entry></entry>
    </row>
     <row>
      <entry><link linkend="ini.from">from</link></entry>
