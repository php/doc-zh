   <simplelist>
    <member><function>mb_internal_encoding</function></member>
    <member><function>mb_ord</function></member>
    <member><function>IntlChar::ord</function></member>
    <member><function>chr</function></member>
   </simplelist>
  </para>
 </refsect1>

