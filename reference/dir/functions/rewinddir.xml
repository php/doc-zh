<refentry xml:id="function.rewinddir" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>rewinddir</refname>
  <refpurpose>倒回目录句柄</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>void</type><methodname>rewinddir</methodname>
   <methodparam><type>resource</type><parameter>dir_handle</parameter></methodparam>
  </methodsynopsis>
  <para>
   将 <parameter>dir_handle</parameter> 指定的目录流重置到目录的开头。
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>dir_handle</parameter></term>
     <listitem>
      <para>
       目录句柄的 <type>resource</type>，之前由
       <function>opendir</function> 打开
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
</refentry>

