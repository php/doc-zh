 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>图像旋转 180 度</title>
    <para>
     示例把图像旋转 180 度——上下颠倒。
    </para>
    <programlisting role="php">
<![CDATA[
<?php
// File and rotation
$filename = 'test.jpg';
$degrees = 180;

// Content type
header('Content-type: image/jpeg');

// Load
$source = imagecreatefromjpeg($filename);

// Rotate
$rotate = imagerotate($source, $degrees, 0);

// Output
imagejpeg($rotate);

// Free the memory
imagedestroy($source);
imagedestroy($rotate);
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <mediaobject>
     <alt>示例输出：图像旋转 180 度</alt>
     <imageobject>
      <imagedata fileref="en/reference/image/figures/imagerotate.jpg"/>
     </imageobject>
    </mediaobject>
   </example>
  </para>
 </refsect1>
