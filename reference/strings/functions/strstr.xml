 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>strstr</function> 范例</title>
    <programlisting role="php">
<![CDATA[
<?php
$email  = 'name@example.com';
$domain = strstr($email, '@');
echo $domain; // 打印 @example.com

$user = strstr($email, '@', true); // 从 PHP 5.3.0 起
echo $user; // 打印 name
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

