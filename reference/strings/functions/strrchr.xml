 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>strrchr</function> 范例</title>
    <programlisting role="php">
<![CDATA[
<?php
// 获取 $PATH 中不含磁盘符号的目录
$dir = substr(strrchr($PATH, ":"), 1);

// 获取最后一行内容
$text = "Line 1\nLine 2\nLine 3";
$last = substr(strrchr($text, 10), 1 );
?>
]]>
    </programlisting>
   </example>   
  </para>
 </refsect1>

