 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>stristr</function> 范例</title>
    <programlisting role="php">
<![CDATA[
<?php
  $email = 'USER@EXAMPLE.com';
  echo stristr($email, 'e'); // 输出 ER@EXAMPLE.com
  echo stristr($email, 'e', true); // 自 PHP 5.3.0 起，输出 US
?>
]]>
    </programlisting>
   </example>
  </para>
  <para>
   <example>
    <title>测试字符串的存在与否</title>
    <programlisting role="php">
<![CDATA[
<?php
  $string = 'Hello World!';
  if(stristr($string, 'earth') === FALSE) {
    echo '"earth" not found in string';
  }
// 输出: "earth" not found in string
?>
]]>
    </programlisting>
   </example>
  </para>
  <para>
   <example>
    <title>使用非字符串 needle</title>
    <programlisting role="php">
<![CDATA[
<?php
  $string = 'APPLE';
  echo stristr($string, 97); // 97 = 小写字母 a
// 输出: APPLE
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="notes">
  &reftitle.notes;
