<refentry xml:id="error.tostring" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>Error::__toString</refname>
  <refpurpose>error 的字符串表达</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis role="Error">
   <modifier>public</modifier> <type>string</type><methodname>Error::__toString</methodname>
   <void/>
  </methodsynopsis>
  <para>
  返回 Error 的 <type>string</type>表达形式。
  </para>
 </refsect1>
 
 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>
 
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
  返回 Error 的 <type>string</type>表达形式。
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>Error::__toString</function> 例子</title>
    <programlisting role="php">
<![CDATA[
<?php
try {
    throw new Error("Some error message");
} catch(Error $e) {
    echo $e;
}
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Error: Some error message in /home/bjori/tmp/ex.php:3
Stack trace:
#0 {main}
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>Throwable::__toString</methodname></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>
