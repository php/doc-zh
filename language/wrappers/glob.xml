 <refsect1 role="examples"><!-- {{{ -->
  &reftitle.examples;
  <example>
   <title>基本用法</title>
   <programlisting role="php">
<![CDATA[
<?php
// 循环 ext/spl/examples/ 目录里所有 *.php 文件
// 并打印文件名和文件尺寸
$it = new DirectoryIterator("glob://ext/spl/examples/*.php");
foreach($it as $f) {
    printf("%s: %.1FK\n", $f->getFilename(), $f->getSize()/1024);
}
?>
]]>
   </programlisting>
